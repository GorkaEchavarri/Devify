<h1 class="m-3">Book a Dev for your project</h1>

<div class="btn btn-light"><%= link_to "Become a Coder!", new_profile_path(@profile) %> </div>
<br>

<% @profiles.each do |profile| %>
<div class="column">

<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h4><%= link_to profile.name, profile_path(profile) %></h4>
    <p>Specialist in <%= profile.category %> programming. </p>
    <p>Read about this Dev: <%= profile.bio %></p>
    <p><%profile.name%>Devify rating: <%= profile.rating %>/10</p>
    <p>Day Rate Charge: Â£<%=profile.day_rate %></p>
  </div>
</div>

</div>
<% end %>

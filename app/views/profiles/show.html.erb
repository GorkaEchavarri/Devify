<% stars = @profile.rating %>
<% minus_starts = 10 - @profile.rating %>

<br>
<div class="container">
<div><h1><%= @profile.name %></h1></div>
<div class="pic-with-bio">
<img class="avatar-large" src="https://static.vecteezy.com/system/resources/previews/002/275/847/non_2x/male-avatar-profile-icon-of-smiling-caucasian-man-vector.jpg" alt="profile pic">
<div class="m-2"><%= @profile.bio %></div>
</div>
<br>
<div>Rating:
<h5><% stars.times do%>
        <%="⭐️" %>
      <% end %>
      <% 10 - minus_starts.times do%>
        <%="☆" %>
      <% end %>
      </h5>
  <div>Expert on:
<h5><%= @profile.category %> Developer 💻</div></h5>
</div>
</div>
<br>

<div><%= @profile.category %> </div>

<%= render "bookings/new"%>


<br>
<%= link_to "Back", profiles_path(@profile) %>
